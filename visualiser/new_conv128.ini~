//============================================================================
// this is the visualiser template for the Seville Retina
//
SEVILLERETINA = 
{
  SIMULATION=7;         // 1=HEATMAP, 2=RATEPLOT, 3=RETINA, 4=INTEGRATORFG, 5=RATEPLOTLEGACY, 6=MAR12RASTER 
